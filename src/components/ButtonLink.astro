---
interface Props {
    href?: string
}

const { href } = Astro.props
---

<a tabindex="0" target='_blank' rel='noreferrer' href={href} class="inline-block rounded-md border-cyan-500 border-2 p-2 text-cyan-500 hover:bg-cyan-500 hover:text-white transition duration-300 ease-in-out hover:cursor-pointer focus:bg-cyan-500 focus:text-white">
    <slot/>
</a>