---
const { title, link, body, datetime } = Astro.props
const date = new Date(datetime).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
})

---


<a href={link} class="bg-[#1a3153] p-4 rounded-md transition-all hover:-translate-y-2 focus:-translate-y-2">
    <span class="sr-only">{title}</span>
    <div class="flex flex-col">
        <h2 class="text-2xl pb-2">{title}</h2>
        <div class="flex flex-1">
            <slot />

        </div>
        <p class="text-sm text-[#a0aec0] pt-2 flex justify-end">{date}</p>
    </div>
</a>