---
import Layout from '../layouts/Layout.astro';
import PixelMe from '../images/pixel_me.png';
import Button from '../components/Button.astro';
import IconList from  '../components/IconList.jsx';
---

<Layout title="Hi, I'm Richard Li">
	<main class="md:mx-32 ">
		<nav class="flex justify-between p-8">
			<div>
				<a href="/">
					<img 
						src={PixelMe}
						alt="Pixel art of myself, Richard Li"
						class="w-8 h-8"
					/>
				</a>
			</div>

			<div class="md:flex gap-4 hidden">
				<a href="/">Home</a>
				<a href="/about">About</a>
				<a href="/blog">Blog</a>
				<a href="/projects">Projects</a>
				<a href="/contact">Contact</a>
			</div>

		</nav>
		<header class="px-8 py-0  md:p-8 flex flex-col gap-4">
			<h3 class="text-xl text-gray-300  lg:text-3xl 3xl:text-5xl ">Hey there! ðŸ‘‹</h3>
			<h1 class="text-5xl lg:text-7xl 3xl:text-9xl  ">I'm 
				<span class="bg-gradient-to-r bg-clip-text text-transparent from-sky-600 via-teal-500 to-teal-600 font-bold whitespace-nowrap">
					Richard Li
				</span>
			</h1>
			<h2 class="text-2xl text-gray-300  3xl:text-4xl ">I'm a software engineer, web developer, and a life long learner</h2>

			<h4 class="text-xl text-gray-400 pt-4 md:max-w-3xl 3xl:text-2xl">
				I love building websites, apps, and everything in between. My goal is to become a swiss army knife of software engineering,
				being a versatile developer who can tackle any problem.
			</h4>

			<!-- Icon Section -->
			<div class="py-8">
				<IconList />
			</div>

		</header>

		
	</main>
</Layout>

